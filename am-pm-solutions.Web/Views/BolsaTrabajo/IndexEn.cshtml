
@{
    ViewBag.Title = "Index";
}
<main id="main">
    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2>SEND YOUR CV</h2>
                <ol>
                    <li><a href="@Url.Action("Index","Home")">HOME</a></li>
                    <li>SEND YOUR CV</li>
                </ol>
            </div>
        </div>
    </section><!-- End Breadcrumbs Section -->
    <!-- ======= Contact Us Section ======= -->
    <section id="contact" class="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12" data-aos="fade-up" data-aos-delay="300">
                    <h4>
                        If you are passionate, responsible, and want to give your best in your role, feel free to send your resume with your personal info, education, and experience at <a href="">email</a>
                    </h4>
                    <br><br>
                    <div class="titulos">Form</div>
                    <br><br>
                    <form action="" method="post" role="form" class="php-email-form">
                        <div class="form-row">
                            <div class="col-lg-12 form-group">
                                <input type="text" name="name" class="form-control" id="name" placeholder="Your Name (*)">
                            </div>
                            <div class="col-lg-12 form-group">
                                <input type="text" class="form-control" name="email" id="city" placeholder="Your City (*)">
                            </div>
                            <div class="col-lg-12 form-group">
                                <input type="text" class="form-control" name="estate" id="estate" placeholder="Your Estate (*)">
                            </div>
                            <div class="col-lg-12 form-group">
                                <input type="text" class="form-control" name="contries" id="contries" placeholder="Your Countries (*)">
                            </div>
                            <div class="col-lg-12 form-group">
                                <input type="email" class="form-control" name="email" id="email" placeholder="Your Email (*)">
                            </div>
                            <div class="col-lg-12 form-group">
                                <input type="file" name="archive" id="archive"></input>
                            </div>
                            <div class="text-center"><button type="submit">SEND CV</button></div>
                    </form>
                </div>
            </div>
        </div>
    </section><!-- End Contact Us Section -->
</main><!-- End #main -->
