@{
    ViewBag.Title = "IndexEs";
}

<main id="main">
    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2>ENVÍA TU CV</h2>
                <ol>
                    <li><a href="@Url.Action("IndexEs","Home")">HOME</a></li>
                    <li>ENVÍA TU CV</li>
                </ol>
            </div>
        </div>
    </section><!-- End Breadcrumbs Section -->
    <!-- ======= Contact Us Section ======= -->
    <section id="contact" class="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12" data-aos="fade-up" data-aos-delay="300">
                    <h4>
                        Si eres apasionado, responsable y tienes ganas de dar lo mejor en tu rol, envía tu currículo con tu información personal, educación y experiencia a <a href="">email</a>
                    </h4>
                    <br><br>
                    <div class="titulos">Formulario</div>
                    <br><br>
                    <form action="" method="post" role="form" class="php-email-form">
                        <div class="form-row">
                            <div class="col-lg-12 form-group">
                                <input type="text" name="nombre" class="form-control" id="nombre" placeholder="Su Nombre y Apellido (*)">
                            </div>
                            <div class="col-lg-12 form-group">
                                <input type="text" class="form-control" name="localidad" id="localidad" placeholder="Su Localidad (*)">
                            </div>
                            <div class="col-lg-12 form-group">
                                <input type="text" class="form-control" name="provincia" id="provincia" placeholder="Su Provincia (*)">
                            </div>
                            <div class="col-lg-12 form-group">
                                <input type="text" class="form-control" name="pais" id="pais" placeholder="Su País (*)">
                            </div>
                            <div class="col-lg-12 form-group">
                                <input type="email" class="form-control" name="email" id="email" placeholder="Su Email (*)">
                            </div>
                            <div class="col-lg-12 form-group">
                                <input type="file" name="archivo" id="archivo"></input>
                            </div>
                            <div class="text-center"><button type="submit">ENVIAR CV</button></div>
                    </form>
                </div>
            </div>
        </div>
    </section><!-- End Contact Us Section -->
</main><!-- End #main -->
